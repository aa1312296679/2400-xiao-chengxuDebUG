/* pages/My/assemble /index.wxss */
.s1 {
  width: 100%;
  background-color: red;
  text-align: center;
  height: 70rpx;
  line-height: 70rpx;
  color: #fff;
}
.s1 image {
  margin-left: 20rpx;
  margin-top: 20rpx;
  float: left;
  width: 17rpx;
	height: 33rpx;
}

.s2{
     width: 95%;
     margin: 0 auto;
     display: flex;
     justify-content: space-around;
   }
   .s2 text {
     width: 120rpx;
     height: 60rpx;
     border-bottom: 2px solid #bb88f2;
     text-align: center;
     line-height: 60rpx;
     color: #000;
     font-size: 14px;
   }
   .s2 text:nth-child(1){
     color: red;
   }
   .s2 text:nth-child(2){
     border-bottom: 2px solid #25c7df;
   }
   .s2 text:nth-child(3){
     border-bottom: 2px solid #fcbf4c;
   }
   .s2 text:nth-child(4){
    border-bottom: 2px solid #679efe;
   }
   .s2_bto {
     height: 20rpx;
     background-color: #fafafa;
   }
   .s3 {
     width: 100%;
     height: 450rpx;
     display: block;
     background-color: #fafafa;
   }
   .s3_main {
     width: 95%;
     margin: 0 auto;
     background-color: #fff;
     text-align: center;
     border-radius: 15rpx;
   }
   .s3_main text:nth-child(2) {
     display: block;
     margin-bottom: 90rpx;
   }
   .s3_bto {
     height: 170rpx;
     display: flex;
     justify-content: space-around;
   }
 .s3_bto .button-hover{
    width: 140rpx;
    height: 130rpx;
    margin: 0;
    background-color: #fff;
 }
   .s3_main image{
     width: 140rpx;
     height: 130rpx;
   }
   .invite {
     display: flex;
     justify-content: space-around;
   }
   .invite button {
     margin-top: 20rpx;
    font-size: 13px;
    text-align: center;
    width: 220rpx;
    height: 63rpx;
    line-height: 63rpx;
    color: #000;
    background-image: linear-gradient(0deg, 
		#208137 0%, 
		#33f861 100%), 
	linear-gradient(0deg, 
		#eb1e0f 0%, 
		#f23b1d 100%);
    background-blend-mode: normal, 
      normal;
    border-radius: 32px;
   }
   .invite text:nth-child(1) {
     background-image: linear-gradient(0deg, 
		#208137 0%, 
		#33f861 100%), 
	linear-gradient(0deg, 
    #eb1e0f 0%, 
		#f23b1d 100%);
    color: #fff;
   }
   .footer {
     position: fixed;
     bottom: 0px;
     height: 100rpx;
     width: 100%;
     line-height: 100rpx;
     background-color: #ccc;
}
.footer>view{
  margin: 0rpx 50rpx;
  display: flex;
  justify-content: space-between;
}
