<!--pages/My/address/index.wxml-->


<view wx:for="{{addressList}}" class="content"> 
    <radio checked="true"></radio>
    <view class="top">
      <h2>{{item.name}}</h2>
      <p>{{item.phone}}</p>
      <text wx:if="{{item.default==1}}">默认</text>
      <text>公司</text>
      <view class="address-list">
      {{item.area}}
      <navigator url="{{'/pages/My/address/waddress/index?id='+item.id}}">
    <image src="../../../img/home/收货地址_03.png" style=" width: 40rpx; height: 40rpx;" mode="scaleToFill"></image>    
      </navigator>
  
      </view>
    </view>
</view>
<view class="bto">
<navigator url="waddress/index">
<text>新建收货地址</text>
</navigator>
</view>