/* pages/My/set/index.wxss */
.s1 {
  width: 100%;
  background-color: red;
  text-align: center;
  height: 70rpx;
  line-height: 70rpx;
  color: #fff;
  display: flex;
  justify-content: space-between;
}
.s1 image {
  margin-left: 20rpx;
  margin-top: 20rpx;
  float: left;
  width: 17rpx;
	height: 33rpx;
}
.s1 text:nth-child(3){
  margin-right: 20rpx;
}
.content {
  width: 100%;
  height: 800rpx; 
}
.main {
  width: 95%;
  margin: 0 auto;
}
.main_top {
  height: 250rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.main_mid li{
  display: flex;
  height: 70rpx;
  border-bottom: 1px solid #f6f6f6;
  margin-top: 30rpx;
  margin-left: 20rpx;
}
.main_mid input {
  margin-left: 50rpx;
  color:#f37b3a;
}

.btn {
  background-color: red;
  border-radius: 50rpx;
  width: 90%;
  border: 0;
  margin: 30rpx auto;
  color: #fff;
}