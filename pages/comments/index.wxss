/* pages/comments/inedx.wxss */
.space {
  height: 20rpx;
  background-color: #f6f6f6;
}
.s6 {
  height: 250rpx;
  padding-top: 20rpx;
  
}
.s6 li:nth-child(1){
 margin-left: 10rpx;
 font-size: 13px;
 color: #ccc;
}
.s6 li:nth-child(1) p{
  display: inline-block;
  width: 30rpx;
	height: 30rpx;
	background-color: #fff;
	border-radius: 50%;
  border: 2px solid #ccc;
  float: left;
  margin-left: 40rpx;
}
.s6 image{
  margin-top: 6rpx;
}

.s6 li:nth-child(1) h1 {
  font-size: 15px;
  font-weight: 600;
  color: #000;
}
.s6 li:nth-child(1) text {
  margin-left: 10rpx;
}
.s6 li:nth-child(1) h2 {
  float: right;
  margin-right: 10rpx;
}
.s6 li:nth-child(2) {
  display: flex;
  flex-wrap: wrap;
  margin-top: 30rpx;
}
.s6 li:nth-child(2) text {
  background-color: #ffe0e6;
  margin-left: 30rpx;
  margin-top: 20rpx;
  padding: 10rpx 30rpx;
  font-size: 13px;
  border-radius: 15rpx;
}
.comments{
  margin: 20rpx;
  display: flex;
  flex-wrap: wrap;
}
.comments view {
  display: flex;
  flex-wrap: wrap;
  margin-left: 20rpx;
}
.comments  li {
  display: flex;
  align-items: center;
  width: 70%;
  font-size: 14px;
  margin-top: 10rpx;
}
.comments  li text {
  margin-right: 10rpx;
}
.c_text {
  margin: 30rpx;
}
.c_img {
  display: flex;
  
}
.c_img image {

}




.bottom {
  position: fixed;
  justify-content: space-around;
  bottom: 0;
  height: 100rpx;
  width: 100%;
  background-color: #fff;
}


.bottom li  {
 display: flex;
 width: 30%;
 
}
.bottom li view {
  margin-left: 42rpx;
  font-size: 13px;
}
.bottom li:nth-child(2) {
  position: absolute;
  top: 30rpx;
  right: 70rpx;
  width: 60%;
}
.bottom li:nth-child(2) text {
  padding: 20rpx 30rpx;
  background-image: linear-gradient(0deg, 
		#f9ae52 0%, 
		#feca49 100%), 
	linear-gradient(
		#fdfdfe, 
		#fdfdfe);
  margin-left: 20rpx;
  border-radius: 30rpx;
  text-align: center;
  color: #fff;
}
 #pay {
  background-image: linear-gradient(0deg, 
		#ed2502 0%, 
		#f84033 100%), 
	linear-gradient(
		#fdfdfe, 
		#fdfdfe);
    padding: 20rpx 50rpx;
}