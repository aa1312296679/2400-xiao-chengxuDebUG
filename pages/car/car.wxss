.stepper {  
    width:90px;  
    height: 24px;  
    /*给主容器设一个边框*/  
    border: 1rpx solid #f6f6f6;  
    border-radius: 10px;  
    margin:0 auto;  
    font-size: 16px;
    float: right;
}  
  
/*加号和减号*/  
.stepper text {  
    width: 24px;  
    line-height: 26px;  
    text-align: center;  
    float: left;
    color: #ccc; 
}  
  
/*数值*/  
.stepper input {  
    width: 40px;  
    height: 24px;  
    float: left;  
     margin: 0 auto;   
    text-align: center;  
    font-size: 14px;  
    color: #000;
    /*给中间的input设置左右边框即可*/  
    border-left: 1rpx solid #ccc;  
    border-right: 1rpx solid #ccc;  
}  
  
/*普通样式*/  
.stepper .normal{  
    color: black;  
}  
  
/*禁用样式*/  
.stepper .disabled{  
    color: #ccc;  
}  


