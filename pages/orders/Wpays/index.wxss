     .s7_content image {
       margin-left: 10rpx;
     }
     .stepper {
       float: right;
     }
     .stepper text {
      display: inline-block;
      text-align: center;
      line-height: 49rpx;
      margin-left: 10rpx;
      width: 130rpx;
      height: 49rpx;
      border-radius: 25rpx;
      font-size: 11px;
      border: solid 1rpx #7f8389;  
     }
     .stepper text:nth-child(3) {
        color: #f23c1d;
        border: solid 1rpx #f23c1d;
        margin-top: 20rpx;
        position: absolute;
        right: 2%;
        bottom: 5%;
     }
     .stepper text:nth-child(2) {
        margin-top: 20rpx;
        width: 150rpx;
        position: absolute;
        right: 22%;
        bottom: 5%;
     }
     .stepper text:nth-child(1) {
        margin-top: 20rpx;
        width: 150rpx;
        position: absolute;
        right: 45%;
        bottom: 5%;
     }
