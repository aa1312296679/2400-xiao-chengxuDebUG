/* pages/orders/Wcomment/index.wxss */
.s1 {
  width: 100%;
  background-color: red;
  text-align: center;
  height: 70rpx;
  line-height: 70rpx;
  color: #fff;
}
.s1 image {
  margin-left: 20rpx;
  margin-top: 20rpx;
  float: left;
  width: 17rpx;
	height: 33rpx;
}
.content {
  background-color: #f6f6f6;
  width: 100%;
  height: 1200rpx;
  padding-top: 10rpx;
}
.main {
  width: 95%;
  margin: 0rpx auto;
}
.s2{
  height: 300rpx;
  background-color: #fff;
  border-radius: 20rpx;
  font-size: 15px;
  font-weight: 600;
  margin-top: 20rpx;
  position: relative;
}
.s2_top radio {
  position: absolute;
  display: block;
  width: 10rpx;
  height: 10rpx;
  left: 1%;
}

.s2_top text{
  margin-top: 5rpx;
  float: left;
  font-size: 13px;
  margin-left: 60rpx;
  font-weight: 600;
}
.s2_top text:nth-child(2) {
  margin-right: 40rpx;
  float: right;
  color: red;
  font-size: 10px;
}
.s2_top image{
  margin-left: 15rpx;
}
