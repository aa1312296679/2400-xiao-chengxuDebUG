<!--pages/orders/Wcomment/index.wxml-->

<view class="content">
  <view class="main">
    <view class="s2" wx:for='{{orderInfo}}' wx:key='{{index}}'>
      <view class="s2_top">
        <text>{{item.productTitle}}</text>
        <text>等待买家付款</text>
        <radio  checked="true"/>
        <image src="../../../img/home/矢量智能对象 拷贝 5.png" mode="scaleToFill" style=" width: 15rpx; height: 20rpx;"></image>
      </view>
      <view class="s2_bot">
        <view class="s7">
          <view class="s7_left">
            <image src="{{item.productImage?item.productImage:'../../../img/home/木马首页_20.png'}}" alt="" style=" width:150rpx; height: 150rpx;"></image>
          </view>
          <view class="s7_right">
            <h4 wx:if='{{item.extInfo}}'>{{item.extInfo}}</h4>
            <view class="content_text">{{item.productTitle}} X {{item.number}} </view>
            <text class="s7_text">￥{{item.payPrice}} </text>
            <view class="stepper">
              <!-- <text class="btn2">修改地址</text> -->
              <text data-id="{{item.id}}" bindtap="cancalOrder" class="btn1">取消订单</text>
              <text data-id="{{item.id}}" bindtap="userPay" class="btn">付款</text>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>
