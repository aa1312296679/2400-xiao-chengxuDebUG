.space {
  height: 20rpx;
  background-color: #fff;
}
.content{
  background-color: #fff;
}
.main {
  width: 95%;
  margin: 0 auto;
  text-align: center;
}
.main text {
  font-size: 18px;
  font-weight: 600;
  display: block;
  letter-spacing: 1px;
}
.main p {
  font-size: 13px;
  color: #7a7a7a;
}


.mid {
  background-color: #fff;
}
.mid_d {
  position: relative;
}
.mid_a {
  top: 50rpx;
  width: 150rpx;
  position: absolute;
}
.mid_a text {
  font-size: 50px;
  color: #fff;
  font-weight: 600;
  margin-left: 110rpx;
}
.mid_a p {
  position: absolute;
  width: 80px;
  color: #fff;
  font-size: 18px;
  top: 0;
  left: 420rpx;
}
.mid_a span {
  display: inline-block;
  margin-left: 330rpx;
  top: 50rpx;
  width: 200rpx;
  height: 50rpx;
  text-align: center;
  font-weight: 600;
  border-radius: 10rpx;
  background-color: #fff;
  position: absolute;
}