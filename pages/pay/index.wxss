/* pages/pay/index.wxss */
.bank {
  background-color: #e6e6e6;
  height: 200rpx;
}
.bank_main {
  background-color: #fff;
  width: 95%;
  margin: 0 auto;
  padding-bottom: 10rpx;
  border-radius: 10rpx;
}
.bank_main p {
  display: inline-block;
  width: 15rpx;
  height: 15rpx;
  border-radius: 50%;
  background-color: #247c35;
  float: left;
  margin-top: 10rpx;
}
.bank_top{
  width: 90%;
  border-bottom: 1px solid #e6e6e6;
  padding-top: 10rpx;
  margin-left: 20px;
}
.bank_top text {
  display: block;
	height: 28rpx;
	font-size: 28rpx;
	line-height: 36rpx;
	letter-spacing: 0rpx;
	color: #333333;
  margin-left: 30rpx;
}
.bank_top h4 {
  width: 195rpx;
	height: 21rpx;
	font-size: 22rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 34rpx;
	letter-spacing: 0rpx;
	color: #247c35;
  margin-left: 30rpx;
}
.bank_bot {
  width: 90%;
  border-bottom: 1px solid #e6e6e6;
  padding-top: 10rpx;
  margin-left: 20px;
  height: 80rpx;
}
.bank_bot input {
	height: 50rpx;
	font-size: 28rpx;
	line-height: 50rpx;
	color: #9ea29e;
  margin-left: 40rpx;
}
.bank_bot p {
  margin-top: 20rpx;
}

.updata {
  background-color: #e6e6e6;
  height: 230rpx; 
  padding-top: 15rpx;
}
.updata_main {
  background-color: #fff;
  width: 95%;
  margin: 0rpx auto;
  border-radius: 15rpx;
}
.updata_main p {
  display: inline-block;
  margin-left: 20rpx;
  width: 8rpx;
	height: 31rpx;
	background-color: #6180f1;
	border-radius: 4rpx;
}
.updata_main text {
  margin-left: 10rpx;
  font-size: 14px;
}
.updata_main image { 
  margin-left: 50rpx;
}
.pay {
  background-color: #e6e6e6;
  height: 300rpx;
}
.pay_main {
  width: 95%;
  background-color: #fff;
  margin: 0rpx auto;
  border-radius: 15rpx;
}
.pay_main text {
  line-height: 60rpx;
  margin-left: 30rpx;
}
.pay_content text:nth-child(3) {
  float: right;
  margin-left: 30rpx;
}
.pay_content image {
  margin: 25rpx;
  float: right;
}
.pay_main input{
  position: absolute;
  bottom: 180rpx;
  left: 130rpx;
  color: #ccc;
  font-size: 13px;
}
.spacel {
  display: block;
}
.s4 {
  position: fixed;
  z-index: 999;
  bottom: 0rpx;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
}
.s4_main{
  width: 90%;
  margin-top: 20rpx;
  margin-left: 37rpx;
  font-size: 13px;
}

.s4  text {
  float: left;
  
}
.s4  text:nth-child(2){
  color: red;
  margin-right: 30rpx;
  font-size: 17px;
}
.s4 h4{
  float: right;
  width: 150rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 15px;
  background-color: red;
  padding-left: 40rpx;
  color: #fff;
  border-radius: 30rpx;
}
.s6{
  background-color: #e6e6e6;
}
.s7 {
     width: 95%;
     margin: 0rpx auto;
     display: flex;
     justify-content: center;
     border-radius: 5px;
     background-color: #fff;
   }
   .content_text{
     font-size: 25rpx;
     color: #ccc;
   }
   .s7_text {
     font-size: 15px;
     color: #ccc;
   }
   .s7_text text{
     color: red;
     font-weight: 650;
   }
   .s7_content {
     color: #ccc;
     font-size: 12px;
   }
   .s7_content text {
     color: #888;
     font-size: 14px;
   }
     .s7_content image {
       margin-left: 10rpx;
     }
     .s7_left {
       margin-top: 20rpx;
     }
     .s7_right {
       margin-left: 20rpx;
       margin-top: 20rpx;
       font-size: 14px;
     }