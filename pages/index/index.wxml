<!--index.wxml-->
<view class="s1">
    <view class='page_row' bindtap="suo">  
      <view class="s1_lefticon">
          <image src="../../img/home/定位.png"></image>
      </view>
      <view class="search">  
        <view class="df search_arr">  
          <icon class="searchcion" size='15' color="#fff" type='search'></icon>  
          <input bindconfirm="search" confirm-type="search" class="search_input" placeholder-style="color:#fff" placeholder="        搜索"/>  
        </view>  
      </view>
      <view>
        <text class="s1_right">{{content}}</text>
      </view>
      <image src="../../img/home/木马首页_03.png" style=" width: 40px; height: 40px; margin:6px;" mode="scaleToFill"></image>  
    </view>  
</view>

<view class="s2">
  <swiper class='u-wrp-bnr' indicator-dots='true' autoplay='true' interval='5000' duration='1000' circular='true'>
  <block wx:key="{{index}}" wx:for="{{bnrUrl}}" wx:for-index="index">
    <swiper-item>
      <image src='{{item.imageUrl + item.url}}' class='u-img-slide' mode='aspectFill'></image>
    </swiper-item>
  </block>
</swiper>
</view>

<view class="s3">
  <navigator url="../Pprice/index?type=1" class="demo">
    <image src="../../img/home/木马首页_07.png" style=" width: 45px; height: 45px; margin:6px;" mode="scaleToFill"></image>
    <button>上门维修</button>
  </navigator>
  <navigator url="../index/choosegoods/index?type=2" class="demo">
    <image src="../../img/home/木马首页_09.png" style=" width: 45px; height: 45px; margin:6px;" mode="scaleToFill"></image>
    <button>购新车</button>
  </navigator>
  <navigator url="../index/oldcar/oldcar?type=3" class="demo">
    <image src="../../img/home/木马首页_11.png" style=" width: 45px; height: 45px; margin:6px;" mode="scaleToFill"></image>
    <button>购二手车</button>
  </navigator>
  <view class="demo"> 
    <button open-type="contact">
     <image src="../../img/home/木马首页_13.png" style=" width: 45px; height: 45px; margin:6px;" mode="scaleToFill"></image>
      <view>人工客服</view>
    </button>   
  </view>
  
</view>

<view class="s5">
  <image src="../../img/home/木马首页_02.png" mode="scaleToFill" style=" width: 100%; height: 200rpx;"></image>
</view>

<view class="s6">
  <view class="s6_top">
    <text> 优选区</text>
    <image src="../../img/home/矢量智能对象 拷贝 5.png" mode="scaleToFill" style=" width: 15rpx; height: 20rpx;"></image>
  </view>
  <view wx:if="{{goodProduct.length}}">
  <Goods wx:key="{{index}}" wx:for="{{goodProduct}}" productData="{{item}}"></Goods>
  </view>
  <view wx:else style="text-align:center;font-size:12px;color:#666;margin-top:80rpx">没有匹配商品~</view>
</view>

