/* pages/choosegoods/index.wxss */
.search{  
      width: 70%;
      margin: 0 auto;
    }  
  .searchcion {
    position: absolute;
    top: 15rpx;
    left: 150rpx;
  }  
    .search_arr {    
      border-radius: 10rpx;  
      margin-left: 10rpx;  
    }  
    .search_arr input{ 
      height: 60rpx;
      font-size: 12px;
      border-radius: 5px;
      background-color: #f37568;
    } 
    .s1 {
      height: 100rpx;
      background-color: #f13a1c;
      color: #fff;
      margin-bottom: 20rpx;
    } 
    .text_mid {
      margin-left: 200rpx;
    }
    .s1_text {
      float: left;
    }
    .s1 image {
      float: left;
    }
   .s1 image:nth-child(3) {
     float: right;
   }

   .s2{
     width: 90%;
     margin: 0 auto;
     display: flex;
     justify-content: space-around;
     
   }
   .s2 text {
     width: 120rpx;
     height: 60rpx;
     border-bottom: 2px solid #bb88f2;
     text-align: center;
     line-height: 60rpx;
     color: #000;
     font-size: 14px;
   }
   .s2 text:nth-child(1){
     color: red;
   }
   .s2 text:nth-child(2){
     border-bottom: 2px solid #25c7df;
   }
   .s2 text:nth-child(3){
     border-bottom: 2px solid #fcbf4c;
   }
   .s2 text:nth-child(4){
    border-bottom: 2px solid #679efe;
   }
   
   .s7 {
     width: 95%;
     margin: 20rpx auto;
     display: flex;
     justify-content: center;
     box-shadow: 3px 3px 3px #ccc;
     border-radius: 5px;
   }
   .content_text{
     font-size: 25rpx;
     color: #ccc;
   }
   .s7_text {
     font-size: 15px;
     color: #ccc;
   }
   .s7_text text{
     color: red;
     font-weight: 650;
   }
   .s7_content {
     color: #ccc;
     font-size: 12px;
   }
   .s7_content text {
     color: #888;
     font-size: 14px;
   }
     .s7_content image {
       margin-left: 10rpx;
     }
     .s7_left {
       margin-top: 20rpx;
     }
     .s7_right {
       margin-left: 20rpx;
       margin-top: 20rpx;
       font-size: 14px;
     }
     .share {
       position: fixed;
       top: 5%;
       width: 100%;
       height: 400rpx;
       z-index: 999;
       display: none;
     }
    .share view {
      margin-right: 30rpx;
        }
     .share view image{
      float: right;
     }
      .share_btn {
        margin-top: 150rpx;
        display: flex;
        justify-content: space-around;
      }
     .share_btn li {
      display: flex;
      justify-content: space-around;
      flex-wrap: wrap;
      align-items: center;
      width: 120rpx;
      height: 120rpx;
      background-color: #fff;
      margin: 20rpx;
      padding: 20rpx;
      border-radius: 50%;
     }
      .share_btn li text {
        font-size: 14px;
      }
      
      .s0 {
        opacity: 1;
        background-color: #000;
      }