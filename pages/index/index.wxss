/**index.wxss**/


.usermotto {
  margin-top: 200px;
}
.s1 {
  height: 110rpx;
  background-color: #f13a1c;
}
.search{  
      width: 70%;
    }  
    .search_arr { 
      margin-top: 25rpx;   
      border-radius: 10rpx;  
      margin-left: 10rpx;  
      position: relative;
    }  
    .search_arr input{ 
      margin-top: 5rpx;   
      height: 60rpx;
      line-height: 60rpx;
      font-size: 12px;
      border-radius: 5px;
      background-color: #f37568;
      /* padding: 0 24rpx; */
      color: #fff;
      padding-left: 70rpx
    }  
    .bc_text {  
      line-height: 68rpx;  
      height: 68rpx;  
      margin-top: 34rpx;  
    }  
        
    .page_row{  
      display: flex;  
      flex-direction: row;
      margin-left: 25px;  
    }
    
    .searchcion{
      position: absolute; 
      left:29rpx;  
      top:16rpx;
      z-index: 2;   
      width: 30rpx;  
      height: 38.8rpx;
    }

    .s1_lefticon image{
      width: 20px;
      height: 20px;
      margin-top: 30rpx;
    }  
    .s1_right {
      width: 60rpx;
      height: 50px;
      overflow: hidden;
      float: right;
      font-size: 24rpx;
      color: #fff;
      margin-left: 25rpx;
    }

    .u-wrp-bnr {
      width: 95%;
      margin: 0 auto;
      height: 360rpx;
      display: block;
      position: relative;
      top: 20rpx;
      background: #fff;
    }
    .u-img-slide,.video-wrapper{
      width: 100%;
      height: inherit;
      overflow: hidden;
    }

    .video-wrapper video{
      width: 100%;
      height: 100%;
    }
    /** s2全屏 **/
    .s2_screen{
        position: fixed;
        width: 100vw;
        height: 100vh;
        top:0;
        z-index: 9999;
    }

    /**swiper全屏**/
    .swiper_screen{
      width:100%;
      height: 100%;
      top:0rpx;
    }
    
    /**swiper遮罩显示**/
    .zpto_show{
       display: block;
       background:transparent;
       width: 100%;
       height: 100%;
       position: absolute;
       z-index: 9999;
    }
    /**swiper遮罩隐藏**/
    .zpto_hide{
      display: none;
    }

    .s3 {
      display: flex;
      justify-content: space-around;
      margin: 30rpx 40rpx 0px 40rpx;
    }
    .demo{
      text-align: center;
    }
    .demo button{
      padding: 0;
      font-size: 30rpx;
      line-height: 30rpx;
      margin-bottom: 20rpx;
      background: transparent;
    }

    .demo button::after {
      border: none
    }
    
    .s5 {
      height: 120px;
      background-color: #f6f6f6;
    }
    .s5 image {
      margin-top: 20rpx;
    }

  .s6_top {
    width: 100%;
    display: flex;
    justify-content: space-between;
    margin-top: 30rpx;
  }
   .s6_top image {
     margin-right: 20rpx;
   }
    .s6_top text {
      display: flex;
      align-items: center;
    }
    .s6_top text::before{
      content: "";
      display: inline-block;
      width: 8rpx;
      height: 33rpx;
      background-color: #6180f1;
      border-radius: 15rpx;
      margin-right: 10rpx;
    }
   
   .s6_top text {
    margin-left: 20rpx;
    font-size: 15px;
   }
